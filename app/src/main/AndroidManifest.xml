<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pw.phylame.crawling">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".CrawlerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.CrawlerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:parentActivityName=".activity.CrawlerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pw.phylame.crawling.activity.CrawlerActivity" />
        </activity>
        <activity
            android:name=".activity.NewTaskActivity"
            android:parentActivityName=".activity.CrawlerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pw.phylame.crawling.activity.CrawlerActivity" />
        </activity>
        <activity
            android:name=".activity.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".activity.CrawlerActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pw.phylame.crawling.activity.CrawlerActivity" />
        </activity>

        <service
            android:name=".service.TaskService"
            android:exported="false" />
    </application>

</manifest>